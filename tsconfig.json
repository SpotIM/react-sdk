{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "lib",
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": false,
    "checkJs": false,
    "jsx": "react",
    "esModuleInterop": true,
    "removeComments": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "lib": ["dom", "esnext"],
    /* Rules */
    "noImplicitAny": false,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "lib", "parcel-bundle-reports", "demo"]
}
